<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Spring Property 지원 -->
    <springProperty scope="context" name="LOG_HOME" source="LOG_HOME" defaultValue="./logs"/>
    <property name="LOGLINE" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- 전체 로그 파일 (ALL) -->
    <appender name="ALL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/app-all.log</file>
        <encoder>
            <pattern>${LOGLINE}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/app-all.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>14</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>

    <!-- WARN 이상 전용 -->
    <appender name="WARN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/app-warn.log</file>
        <encoder>
            <pattern>${LOGLINE}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/app-warn.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>

    <!-- 콘솔 로그 (로컬용) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOGLINE}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="ALL_FILE"/>
        <appender-ref ref="WARN_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>